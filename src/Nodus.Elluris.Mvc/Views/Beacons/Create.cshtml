@model Nodus.Elluris.Domain.Models.Beacon

@{
    ViewData["Title"] = "Incluir Beacon";
}

<div class="card">
    <div class="card-header text-white bg-info mb-3">
        <h1>Incluir Beacon</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BeaconCode" class="control-label"></label>
                        <input asp-for="BeaconCode" class="form-control" />
                        <span asp-validation-for="BeaconCode" class="text-danger" data-val-required="O código do Beacon é obrigatório."></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-info" />
                        <a asp-controller="Beacons" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
