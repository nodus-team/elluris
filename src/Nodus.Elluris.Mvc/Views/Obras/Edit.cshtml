@model Nodus.Elluris.Domain.Models.Obras

@{
    ViewData["Title"] = "Editar Obra";
}

<div class="card">
    <div class="card-header text-white bg-info mb-3">
        <h1>Editar Obra</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div>
                        <input type='file' value="Selecione o Arquivo" class="btn btn-info btn-block" onchange="readURL(this);" />
                    </div>
                    <div class="mt-3">
                    <img src="@Model.UrlFoto" alt="Imagem obra" class="img-fluid rounded btn-block" id="fotoObra" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea asp-for="Descricao" class="form-control"
                                  id="Observacao"
                                  rows="5" cols="40"
                                  data-val-required="A Descrição é Obrigatória."
                                  data-val-maxlength-max="500"
                                  data-val-maxlength="O Tamanho máximo para a descrição são '500' caracteres."
                                  data-val="true"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observacao" class="control-label"></label>
                        <textarea asp-for="Observacao" class="form-control"
                                  id="Observacao"
                                  rows="5" cols="40"
                                  data-val-required="A Observação é Obrigatória."
                                  data-val-maxlength-max="500"
                                  data-val-maxlength="O Tamanho máximo para a descrição são '500' caracteres."
                                  data-val="true"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UrlFoto" id="url" class="form-control" />
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-info" />
                        <a asp-controller="Obras" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
