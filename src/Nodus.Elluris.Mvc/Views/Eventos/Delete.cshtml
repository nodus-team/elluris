@model Nodus.Elluris.Domain.Models.Evento

@{
    ViewData["Title"] = "Excluir Evento";
}

<div class="card">
    <div class="card-header text-white bg-info mb-3">
        <h1>Excluir Evento</h1>
    </div>
    <div class="card-body">
        <h3>Você deseja mesmo excluir este registro?</h3>
        <partial name="_delete_details_evento" />
        <form asp-controller="Eventos" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-controller="Eventos" asp-action="Index" class="btn btn-info">Voltar à lista</a>
        </form>
    </div>
</div>