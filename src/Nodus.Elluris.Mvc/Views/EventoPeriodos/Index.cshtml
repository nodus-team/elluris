@model IEnumerable<Nodus.Elluris.Domain.Models.EventoPeriodo>

@{
    ViewData["Title"] = "Lista de Períodos";
}

<div class="card">
    <div class="card-header text-white bg-info mb-3">
        <h1>Lista de Períodos</h1> 
    </div>
    <div class="card-body">
        <p>
            <a asp-controller="EventoPeriodos" asp-action="Create" id="navbar-category-tutorial-jquery"
               class="btn btn-info btn-sm my-0 waves-effect waves-light" role="button">
                <span class="d-none d-lg-inline-block mr-1">Adicionar Período</span>
            </a>
        </p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DataInicial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataFinal)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.DataAtualizacao)
                    </th>*@
                    <th class="text-center">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFinal)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.DataAtualizacao)
                    </td>*@
                    <td class="text-center">
                        <a asp-controller="EventoPeriodos" asp-action="Edit" asp-route-id="@item.Id"><span class="fas fa-pen fa-1x text-info" title="Editar Período"></span> </a>
                        <a asp-controller="EventoPeriodos" asp-action="Details" asp-route-id="@item.Id"><span class="fas fa-search fa-1x text-info" title="Detalhes Período"></span> </a>
                        <a asp-controller="EventoPeriodos" asp-action="Delete" asp-route-id="@item.Id"><span class="fas fa-trash fa-1x text-info" title="Excluir Período"></span> </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


